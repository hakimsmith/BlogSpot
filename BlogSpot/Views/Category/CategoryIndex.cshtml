@model IEnumerable<BlogSpot.Models.Category>

@{
    Layout = "_Layout";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Category</title>
</head>
<body>
    <h1>Welcome to the BlogSppt</h1>
    <h2>Categories</h2>
    <main>

        @foreach (var item in Model)
        {
            <a href="Category/SingleCategory/@item.CategoryId">

                <h2>@item.CategoryName</h2>


            </a>
        }

    </main>
</body>
</html>
